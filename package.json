{
  "private": true,
  "name": "skrt",
  "version": "1.0.0",
  "description": "A React/MDX static site generator (SSG) with launch control",
  "author": {
    "name": "Ian Walter",
    "url": "https://ianwalter.dev"
  },
  "license": "SEE LICENSE IN LICENSE",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "copy.css": "cp packages/styles/skrt.min.css site",
    "build.docs": "skrt build docs site",
    "build": "run-p build.docs copy.css",
    "watch": "skrt watch docs site"
  },
  "dependencies": {
    "@changesets/cli": "^2.14.1",
    "@ianwalter/eslint-config": "^6.2.0",
    "eslint": "^7.20.0"
  },
  "skrt": {
    "layout": "docs",
    "layouts": "packages/skrt/lib/layouts",
    "stylesheet": "/skrt.min.css"
  },
  "renovate": {
    "extends": [
      "@ianwalter"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ianwalter"
    ]
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
